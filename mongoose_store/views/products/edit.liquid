{% block header %}

{% endblock %}
{% block content %}
<div class="container">
    <h1>{{ product.name }}</h1>
    <div class="product-show">
        <div class="item-edit">
            <form action="/products/{{product.id}}?_method=PUT" method="POST">
                <P>Name:<input type="text" name="name" value="{{product.name}}" required></P>
                <P>Description:<input type="text" name="description" value="{{product.description}}" required></P>
                <P>Img:<input type="text" name="img" value="{{product.img}}" required></P>
                <P>Price:<input type="number" name="price" value="{{product.price}}" min="0.01" step="0.01" required></P>
                <P>Stock of Item:<input type="number" name="qtyAvailable" value="{{product.qtyAvailable}}" min="0" required></P>

                <input type="submit" value="Back to item" formaction="/products/{{product.id}}" formmethod="GET">
                
                <input type="submit" value="Update Item">

                <input type="submit" value="Delete" formaction="/products/{{product.id}}?_method=DELETE" formmethod="POST">
            </form>
        </div>
    </div>
</div>
{% endblock %}
