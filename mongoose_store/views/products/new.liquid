{% block content %}
<div class="container">
    <h1>{{ product.name }}</h1>
    <div class="product-show">
        <div class="item-edit">
            <form action="/products" method="POST">
                <P>Name:<input type="text" name="name" required></P>
                <P>Description:<input type="text" name="description" required></P>
                <P>Img:<input type="text" name="img" required></P>
                <P>Price:<input type="number" name="price" min="0.01" step="0.01" required></P>
                <P>Stock of Item:<input type="number" name="qtyAvailable" min="0" required></P>

                <input type="submit" value="Back to Main Page" formaction="/products/{{product.id}}" formmethod="GET">
                
                <input type="submit" value="Add Item">
            </form>
        </div>
    </div>
</div>
{% endblock %}
